{
  "name": "notes",
  "displayName": "Notes",
  "description": "Syntax highlighting for simple notes in Visual Studio Code",
  "icon": "images/icon.png",
  "version": "1.2.0",
  "publisher": "canadaduane",
  "repository": "https://github.com/canadaduane/vscode-notes",
  "engines": {
    "vscode": "^1.10.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./vscode/extension",
  "contributes": {
    "configuration": {
      "title": "Notes",
      "properties": {
        "notes.linkPatterns.enabled": {
          "type": "boolean",
          "default": true
        },
        "notes.linkPatterns.values": {
          "type": "object",
          "default": {},
          "description": "A list of regex-like link patterns (e.g. [\"[/ABC-\\d+/ -> https://abc-project.atlassian.net/browse/$0]\"]) that will be applied across all your notes. Turns matching text into links.",
          "additionalProperties": {
            "anyOf": [
              {
                "type": "string"
              }
            ]
          }
        }
      }
    },
    "languages": [
      {
        "id": "notes",
        "aliases": [
          "Notes"
        ],
        "extensions": [
          ".notes"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "notes",
        "scopeName": "source.notes",
        "path": "./syntaxes/notes.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "notes.cycleTaskForward",
        "title": "Task Complete (cycle)"
      },
      {
        "command": "notes.cycleTaskBackward",
        "title": "Task Complete (cycle backward)"
      }
    ],
    "snippets": [
      {
        "language": "notes",
        "path": "./snippets/newday.json"
      }
    ],
    "keybindings": [
      {
        "command": "notes.cycleTaskForward",
        "key": "cmd+l",
        "when": "editorTextFocus"
      },
      {
        "command": "notes.cycleTaskBackward",
        "key": "alt+l",
        "when": "editorTextFocus"
      }
    ]
  },
  "__metadata": {
    "id": "ccfb475f-3c67-45f3-a691-8588a006e64d",
    "publisherDisplayName": "canadaduane",
    "publisherId": "49b06e7f-44dd-4bc3-bf81-0c94b2c2c7f0"
  }
}

